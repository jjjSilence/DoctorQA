/* pages/register/register.wxss */
.container {
  min-height: 1500rpx;
}

.line {
  width: 750rxp;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #fff;
  margin: 80rpx 0 0 0;
  padding: 0 20rpx 0 20rpx;
}

.line text {
  text-align: left;
  height: 100%;
  font-size: 32rpx;
  white-space: nowrap;
  overflow: hidden;
  display: block;
}

.line input {
  flex-grow: 1;
  font-size: 32rpx;
  padding: 0 10rpx 0 30rpx;
}

.code {
  margin-top: 2rpx;
}

.code button {
  height: 70rpx;
  line-height: 70rpx;
  font-size: 26rpx;
  border: none;
  border-radius: 3rpx;
  color: #298de5;
  background: #fff;
  white-space: nowrap;
  overflow: hidden;
  display: block;
}

.code button:hover {
  background-color: #efefef;
}

.register {
  width: 750rpx;
  margin: 100rpx 0 0 0;
}

.register button {
  width: 650rpx;
  background: #298de5;
  color: #fff;
}

.register button:hover {
  color: #dedede;
  background: #298de5;
}
