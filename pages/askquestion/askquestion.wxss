/* pages/askquestion/askquestion.wxss */

.container {
  min-height: 1500rpx;
}

.content {
  display: flex;
}

.container textarea {
  width: 100%;
  height: 350rpx;
  background: white;
  margin: 20rpx;
  padding: 20rpx;
  font-size: 32rpx;
}

.tip {
  padding: 0 20rpx 0 20rpx;
  display: block;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
}

.doctors {
  width: 710rpx;
  margin: 0 0 20rpx 20rpx;
}

.doctors .inner {
  display: flex;
  flex-direction: row;
}

.item {
  display: flex;
  flex-direction: column;
  margin: 0 25rpx 0 0;
  align-items: center;
}

.item .avatar {
  width: 105rpx;
  height: 105rpx;
  background: papayawhip;
  text-align: center;
  border-radius: 60rpx;
  
}

.item text {
  font-size: 32rpx;
  text-align: center;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.publish{
  font-size: 32rpx;
  background: white;
}

.publish:hover{
  background: #efefef;
}