/**app.wxss**/

/*所有页面的背景颜色  */

page {
  background-color: #f0f4f3;
}

.container {
  width: 750rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  background: #f0f4f3;
}

/*分割线  */

.split {
  width: 100%;
  height: 2rpx;
  background: #efefef;
}

.flex-item {
  flex-grow: 1;
  text-align: center;
  font-size: 32rpx;
  color: #8ccefd;
}

.flex-tab {
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: stretch;
}


