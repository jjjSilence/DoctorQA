/**app.wxss**/

/*所有页面的背景颜色  */
page{
  background-color: #F0F4F3;
}

.container {
  width: 750rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  background: #F0F4F3;
} 

.top-tab{
  width: 750rpx;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: stretch;
  background: #ffffff;
}

.flex-item{
  flex-grow: 1;
  text-align: center;
  font-size: 32rpx;
  color: #8CCEFD;
}

.flex-tab{
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: stretch;
}

.active{
  color: #298DE5;
  border-bottom: solid 2px #298DE5;
  margin: 0 20rpx 0 20rpx;
}