/**app.wxss**/

/*所有页面的背景颜色  */

page {
  background-color: #f0f4f3;
}

.container {
  width: 750rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  background: #f0f4f3;
}

/*分割线  */

.split {
  width: 100%;
  height: 2rpx;
  background: #efefef;
}

.flex-item {
  flex-grow: 1;
  text-align: center;
  font-size: 32rpx;
  color: #8ccefd;
}

.flex-tab {
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: stretch;
}

/***************************** 问题界面 ********************************/

/*置顶的部分  */

.top-view {
  display: flex;
  flex-direction: column;
  position: fixed;
  top: 0;
  background: #f0f4f3;
  z-index: 9999;
}

/*tab布局  */

.top-tab {
  width: 750rpx;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: stretch;
  background: #fff;
}


/*滚动部分  */

.container.activity {
  padding: 0 0 0 0;
}

/*tab选中样式  */

.active {
  color: #298de5;
  border-bottom: solid 2px #298de5;
  margin: 0 20rpx 0 20rpx;
}
